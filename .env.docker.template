# Docker Environment Configuration for Algorithmic Trading Platform
# Copy this file to .env.docker and customize the values

# ======================
# TRADING CONFIGURATION  
# ======================
TRADING_MODE=dry_run
ENABLE_PAPER_TRADE=true
MAX_POSITIONS=20
DEFAULT_STOP_LOSS=0.05
DEFAULT_TAKE_PROFIT=0.10

# ======================
# RISK MANAGEMENT
# ======================
MAX_POSITION_SIZE=0.10
MAX_DAILY_LOSS=0.02
MAX_PORTFOLIO_RISK=0.15

# ======================
# ALPACA API CREDENTIALS
# ======================
# IMPORTANT: Replace these with your actual Alpaca API credentials
# Get your API keys from: https://app.alpaca.markets/
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# For live trading, use:
# ALPACA_BASE_URL=https://api.alpaca.markets

# ======================
# DATABASE CONFIGURATION
# ======================
POSTGRES_DB=trading
POSTGRES_USER=trader
POSTGRES_PASSWORD=trading123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ======================
# APPLICATION SETTINGS
# ======================
PYTHONPATH=/app
ENVIRONMENT=docker
LOG_LEVEL=INFO
LOG_FORMAT=json

# ======================
# MONITORING & METRICS
# ======================
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# ======================
# DASHBOARD CONFIGURATION
# ======================
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_HEADLESS=true

# ======================
# SECURITY SETTINGS
# ======================
# Set to true in production
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# ======================
# RESOURCE LIMITS
# ======================
TRADING_ENGINE_MEMORY=1g
TRADING_ENGINE_CPU=0.5
DASHBOARD_MEMORY=512m
DASHBOARD_CPU=0.25

# ======================
# VOLUME MOUNTS
# ======================
ARTIFACTS_PATH=./artifacts
LOGS_PATH=./logs
CONFIG_PATH=./config

# ======================
# DEVELOPMENT OPTIONS
# ======================
# Set to true for development mode
DEV_MODE=false
AUTO_RELOAD=false
DEBUG_MODE=false

# ======================
# BACKUP CONFIGURATION
# ======================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
