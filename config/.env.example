# Core Settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Data Providers
PROVIDER_YAHOO_ENABLED=true
PROVIDER_TRADINGVIEW_ENABLED=false
FEATURE_TV=false

# Alpaca Trading (Paper by default)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_PAPER_MODE=true
ENABLE_PAPER_TRADE=true

# Database
DATABASE_URL=postgresql://trading:trading@localhost:5432/trading
# For SQLite fallback: sqlite:///./trading.db

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=algorithmic-trader-artifacts
S3_PREFIX=artifacts

# Redis (for background tasks)
REDIS_URL=redis://localhost:6379/0

# UI Configuration
UI_MODE=artifacts
UI_PASSWORD=changeme
ARTIFACTS_ROOT=artifacts
FEATURE_LIVE_PROVIDERS=false

# Trading Configuration
DRY_RUN=true
MAX_POSITION_SIZE_PCT=2.0
DAILY_LOSS_LIMIT_PCT=5.0
STOP_LOSS_ATR_MULTIPLIER=1.5
TAKE_PROFIT_ATR_MULTIPLIER=3.0

# Screening Filters
MIN_PRICE=1.0
MAX_PRICE=1000.0
MIN_DOLLAR_VOLUME=10000000
MIN_ATR_PERCENT=2.0
MAX_SYMBOLS_PER_SECTOR=5
TOPK_SYMBOLS=50

# Time Segments (ET)
TRADING_START_TIME=09:30
TRADING_END_TIME=16:00
PREMARKET_START_TIME=07:00
AFTERHOURS_END_TIME=20:00

# QuantConnect Lean
LEAN_CONFIG_PATH=config/lean_config.json
LEAN_DATA_PATH=data/lean

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
